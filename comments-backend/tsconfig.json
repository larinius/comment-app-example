{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["./src/test/*"]
    },
    "moduleResolution": "Node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
